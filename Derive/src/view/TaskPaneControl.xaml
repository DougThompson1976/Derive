<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:Derive.view" xmlns:src="clr-namespace:VitaLib.src;assembly=VitaLib" x:Class="Derive.view.TaskPaneControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer x:Name="scrollviewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <src:EditableStackPanel x:Name="stack" Margin="0,0,5,0" CanVerticallyScroll="True"/>
        </ScrollViewer>
    </Grid>
</UserControl>
